{
  "compileOnSave": false,
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "target": "es2017",
    "declaration": false,
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types",
      "typings/app.d.ts",
      "typings/hbs.d.ts"
    ],
    "paths": {
      "core": [
        "./src/core"
      ],
      "pages": [
        "./src/pages"
      ],
      "components": [
        "./src/components"
      ],
      "helpers": [
        "./src/helpers"
      ],
      "services": [
        "./src/services"
      ],
      "hocs": [
        "./src/hocs"
      ],
      "store": [
        "./src/store"
      ],
      "models": [
        "./src/models"
      ],
      "api": [
        "./src/api"
      ],
      "router": [
        "./src/router"
      ]
    }
  }
}
